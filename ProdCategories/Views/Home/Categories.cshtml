@model Category
    <h1 class="text-center"><a href="/">Products</a>| Categories</h1>
    <div class="row mt-5">
        <div class="col border-right border-dark p-0">
            <h4>New Category</h4>
            <form action="/createCategory" method="post">
                <div class="row mt-5">
                    <div class="col">
                        <p>Name:</p>
                        <input asp-for="CategoryName"><br>
                        <input class="mt-3" type="submit" value="Create">
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <h4>Existing Categories</h4>
            @foreach (var i in @ViewBag.categories)
            {
              <a href="/updateCategory/@i.CategoryId"><p>@i.CategoryName</p></a>
            }
        </div>
    </div>