@model Dish
<h1>Add a new Dish!</h1>
<a href="/">Home</a>
<form asp-action="addDish"  asp-controller="Home" method="post">
<div class="row">
    <div class="col-2 mt-5">
    <span asp-validation-for="Chef"></span>
    <label asp-for="Chef"></label>
    <input asp-for="Chef" type="text">

    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <input asp-for="Name" type="text">

    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories"></label>
    <input asp-for="Calories" type="text">

    </div>
    <div class="col-2 ml-5 mt-5">
    <span asp-validation-for="Tastiness"></span>
    <label asp-for="Tastiness"></label><br>
    <select asp-for="Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    </div>
    <div class="col">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label><br>
        <textarea asp-for="Description" cols="30" rows="5"></textarea><br>
        <input type="submit" value="Add Dish">
    </div>
</div>
</form>