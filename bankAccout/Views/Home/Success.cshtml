@model Transaction
<div class="row">
<a class ="col text-right" href="/clear">LOG OUT</a>
</div>
<div class="row">
<h1 class="col">Welcome, @ViewBag.OneUser.FirstName</h1>
<h3 class="col">Current Balance: @ViewBag.balance</h3>
</div>

<form action="/depoWith" method="post">
    <div class="row">
        <div class="col">
          <span class="text-danger" asp-validation-for="Amount"></span>
          <h6>Deposit/withdraw <input asp-for="Amount"></h6>
          <input asp-for="UserId" type="hidden" value="@ViewBag.OneUser.UserId">
        </div>
        <div class="col">
          <input class="p-2" type="submit" value="Submit">
        </div>
    </div>
</form>

<div class="row mt-5">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Amount</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var i in @ViewBag._transactions)
      {
      <tr>
        <td>@i.Amount</td>
        <td>@i.CreatedAt</td>
      </tr>
      }
    </tbody>
  </table>
</div>